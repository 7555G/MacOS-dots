#!/usr/bin/env bash

# function to append last input line to PATH
append_last_path () {
    local extra_path
    while IFS= read -r extra_path; do
        append_last_path
        export PATH="${extra_path}:${PATH//":$extra_path"}"
    done

    echo "export PATH=\"${PATH}\""
}

extra_paths_file="$1"
append_last_path < "${extra_paths_file}"
